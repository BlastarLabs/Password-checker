  <p id="strength"></p>

  <script>
    function checkStrength() {
      const pass = document.getElementById("pass").value;
      let strength = "Weak password";
      if (pass.length > 8 && /[A-Z]/.test(pass) && /\d/.test(pass) && /[^A-Za-z0-9]/.test(pass)) {
        strength = "Strong password  ðŸ’ª";
      } else if (pass.length > 5) {
        strength = "Medium âš¡";
      }
      document.getElementById("strength").textContent = "Strength: " + strength;
    }
  </script>
